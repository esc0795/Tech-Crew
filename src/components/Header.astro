<header class="header">
   <head>
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Tech Crew</title>
      <link rel="stylesheet" href="/global.css">
    </head>

   <div class="logo">
     <img src="/Tech-Crew/tc.png" alt="Logo de Tech Crew" />
   </div>
 
   <button class="menu-toggle" id="menu-toggle" aria-label="Abrir menÃº">
     <svg width="30" height="30" viewBox="0 0 100 80" fill="white" xmlns="http://www.w3.org/2000/svg">
       <rect width="100" height="10"></rect>
       <rect y="30" width="100" height="10"></rect>
       <rect y="60" width="100" height="10"></rect>
     </svg>
   </button>
 
   <nav class="nav-container" id="nav">
     <ul class="nav-links">
       <li><a href="/Tech-Crew/">Tech Crew</a></li>
       <li><a href="/Tech-Crew/contacto">Contacto</a></li>
     </ul>
   </nav>
 </header>
 
 <style>
   @import url('https://fonts.googleapis.com/css2?family=Geist:wght@100&display=swap');
 
   body {
     margin: 0;
     font-family: 'Geist', sans-serif;
     background: black;
     color: white;
   }
 
   .header {
     display: flex;
     align-items: center;
     justify-content: space-between;
     padding: 1rem 2rem;
     background-color: black;
     border-bottom: 1px solid #000;
     position: fixed;
     top: 0;
     left: 0;
     width: 100%;
     z-index: 1000;
   }
 
   .logo img {
     height: 190px;
   }
 
   .menu-toggle {
     display: none;
     background: none;
     border: none;
     cursor: pointer;
     z-index: 1001;
   }
 
   .nav-container {
     display: flex;
   }
 
   .nav-links {
     list-style: none;
     display: flex;
     gap: 2.7rem;
     padding: 0;
     margin: 0;
     align-items: center;
   }
 
   .nav-links a {
     text-decoration: none;
     color: #ffffff;
     font-size: 35px;
     margin-right: 150px;
     padding-bottom: 5px;
     border-bottom: 1px solid transparent;
     transition: border-bottom-color 0.3s ease;
   }
 
   .nav-links a:hover {
     color: #d4d4bf;
     border-bottom-color: #f1cd00;
   }
 
   /* ------------------ Responsive ------------------ */
   @media (max-width: 768px) {
     .header {
       flex-wrap: wrap;
     }
 
     .menu-toggle {
       display: block;
       padding-right: 5rem;
     }
 
     .nav-container {
       display: none;
       width: 100%;
     }
 
     .nav-container.active {
       display: flex;
       justify-content: center;
     }
 
     .nav-links {
       flex-direction: column;
       align-items: center;
       width: 100%;
       gap: 1rem;
       margin-top: 1rem;
     }
 
     .nav-links a {
       font-size: 20px;
     }
 
     .logo img {
       height: 80px;
     }
   }
 </style>
 
 <script>
   document.addEventListener('DOMContentLoaded', () => {
     const toggle = document.getElementById('menu-toggle');
     const nav = document.getElementById('nav');
 
     if (toggle && nav) {
       toggle.addEventListener('click', () => {
         nav.classList.toggle('active');
       });
     }
   });
 </script>
 